            margin-top: 10px;
        }

        /* Add more styles as needed */
    </style>
</head>

<body>
    <h1>{{ heading }}</h1>
    <p>{{ subheading }}</p>
    <textarea>{{ textarea_content }}</textarea>

    <table>
        <thead>
            <tr>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Phonenumber</th>
            </tr>
        </thead>
        <tbody>
            <!-- Add table data here -->
        </tbody>
    </table>

    <video width="320" height="240" controls>
        <source src="{{ video_source }}" type="video/mp4">
        <source src="{{ video_source_ogg }}" type="video/ogg">
        <track src="{{ subtitles_source_en }}" kind="subtitles" srclang="en" label="English">
        <track src="{{ subtitles_source_fi }}" kind="subtitles" srclang="no" label="Norwegian">
    </video>

    <u>{{ help_text }}</u>
    <time>{{ date_and_time }}</time>

    <!-- Add more HTML elements and content as needed -->


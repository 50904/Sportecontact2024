"""

# Data to be passed to the template
data = {
    "title": "www.sportcontact.com",
    "background_color": "green",
    "text_color": "white",
    "heading": "SPORTCONTACT",
    "subheading": "For Every Athlete",
    "textarea_content": "Do you want to be a Sponsor or do you want to be Sponsored?!",
    "video_source": "Sportcontacttype.mp4",
    "video_source_ogg": "Sportcontacttype.ogv",
    "subtitles_source_en": "fgsubtitles_en.vtt",
    "subtitles_source_fi": "fgsubtitles_fi.vtt",
    "help_text": "Helps every athlete",
    "date_and_time": "24/7= 24: 365p x 24: Today 22.11.2023: time: 13:10",
    # Add more data as needed
}

# Create a Jinja2 template
template = Template(html_template)

# Render the template with the provided data
rendered_html = template.render(data)

# Save the generated HTML to a file
with open("generated_html.html", "w") as file:
    file.write(rendered_html)

print("HTML file generated: generated_html.html")
// Function to retrieve a specific contact by name
function getContactByName(name) {
    return sportsContacts.find(contact => contact.name === name);
}

// Function to add a new contact
function addContact(contact) {
    sportsContacts.push(contact);
}

// Function to remove a contact by name
function removeContactByName(name) {
    const index = sportsContacts.findIndex(contact => contact.name === name);
    if (index !== -1) {
        sportsContacts.splice(index, 1);
    }
}

// Function to list all contacts
function listContacts() {
    return sportsContacts;
}

// Exporting functions for use in other modules
module.exports = {
    getContactByName,
    addContact,
    removeContactByName,
    listContacts
};